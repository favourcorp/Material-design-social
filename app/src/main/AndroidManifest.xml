<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.life.hangouts">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignupActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme" />
        <activity android:name=".NewEvent" />
        <activity android:name=".Approved_Invitation"
            android:label="Approved Invitation"
            android:theme="@style/AppTheme"/>
        <activity android:name=".Events"
            android:label="Events"
            android:theme="@style/AppTheme"/>
        <activity android:name=".Pending"
            android:label="Pending"
            android:theme="@style/AppTheme"/>
        <activity android:name=".Following"
            android:label="Following"
            android:theme="@style/AppTheme"/>
        <activity android:name=".Followers"
            android:label="Followers"
            android:theme="@style/AppTheme"/>
        <activity
            android:label="Settings"
            android:name=".Settings"
            android:theme="@style/AppTheme"/>
        <activity android:name=".Profile"
            android:label="Profile"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>